@rendermode InteractiveServer
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation
@inject HttpClient Http
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Carrier Integration</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            @if (isAuthenticated)
            {
                <NavLink class="nav-link" href="shipment/create">
                    <span class="bi bi-plus-square-nav-menu" aria-hidden="true"></span> Create Shipment
                </NavLink>
            }
            else
            {
                <a class="nav-link disabled" aria-disabled="true" style="cursor: not-allowed; opacity: 0.6;">
                    <span class="bi bi-plus-square-nav-menu" aria-hidden="true"></span> Create Shipment
                </a>
            }
        </div>

        <div class="nav-item px-3">
            @if (isAuthenticated)
            {
                <NavLink class="nav-link" href="shipment/label/create">
                    <span class="bi bi-tag-nav-menu" aria-hidden="true"></span> Create Shipment Label
                </NavLink>
            }
            else
            {
                <a class="nav-link disabled" aria-disabled="true" style="cursor: not-allowed; opacity: 0.6;">
                    <span class="bi bi-tag-nav-menu" aria-hidden="true"></span> Create Shipment Label
                </a>
            }
        </div>

        @if (!isAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Login
                </NavLink>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <button class="nav-link btn btn-link" @onclick="HandleLogout">
                    <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> Logout
                </button>
            </div>
        }
    </nav>
</div>

@code {
    private bool isAuthenticated = false;
    private System.Threading.Timer? timer;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CheckAuthenticationStatus();
            // Poll for authentication changes every second
            timer = new System.Threading.Timer(async _ =>
            {
                await InvokeAsync(async () =>
                {
                    await CheckAuthenticationStatus();
                    StateHasChanged();
                });
            }, null, TimeSpan.FromSeconds(1), TimeSpan.FromSeconds(1));
        }
    }

    private async Task CheckAuthenticationStatus()
    {
        try
        {
            var token = await JSRuntime.InvokeAsync<string?>("localStorage.getItem", "bearerToken");
            isAuthenticated = !string.IsNullOrEmpty(token);
        }
        catch
        {
            isAuthenticated = false;
        }
    }

    private async Task HandleLogout()
    {
        try
        {
            var token = await JSRuntime.InvokeAsync<string?>("localStorage.getItem", "bearerToken");
            
            if (!string.IsNullOrEmpty(token))
            {
                // Call the logout endpoint with the bearer token
                await Http.PostAsJsonAsync("https://localhost:7082/logout", new { token = token });
            }
            
            await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "bearerToken");
            isAuthenticated = false;
            Navigation.NavigateTo("/", true);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Logout error: {ex.Message}");
        }
    }

    public void Dispose()
    {
        timer?.Dispose();
    }
}
