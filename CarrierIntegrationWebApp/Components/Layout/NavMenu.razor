@rendermode InteractiveServer
@using CarrierIntegrationWebApp.Services
@inject NavigationManager Navigation
@inject HttpClient Http
@inject BearerTokenService BearerTokenService
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Carrier Integration</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="shipment/create">
                <span class="bi bi-plus-square-nav-menu" aria-hidden="true"></span> Create Shipment
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="shipment/label/create">
                <span class="bi bi-tag-nav-menu" aria-hidden="true"></span> Create Shipment Label
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="shipment/labels">
                <span class="bi bi-list-ul-nav-menu" aria-hidden="true"></span> List Shipment Labels
            </NavLink>
        </div>

        @if (!isAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Login
                </NavLink>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <button class="nav-link btn btn-link" @onclick="HandleLogout">
                    <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> Logout
                </button>
            </div>
        }
    </nav>
</div>

@code {
    private bool isAuthenticated = false;
    private System.Threading.Timer? timer;

    protected override void OnInitialized()
    {
        CheckAuthenticationStatus();
        // Poll for authentication changes every second
        timer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
            {
                CheckAuthenticationStatus();
                StateHasChanged();
            });
        }, null, TimeSpan.FromSeconds(1), TimeSpan.FromSeconds(1));
    }

    private void CheckAuthenticationStatus()
    {
        isAuthenticated = BearerTokenService.HasToken();
    }

    private async Task HandleLogout()
    {
        try
        {
            var token = BearerTokenService.Token;
            
            if (!string.IsNullOrEmpty(token))
            {
                // Call the logout endpoint with the bearer token
                await Http.PostAsJsonAsync("https://localhost:7082/logout", new { token = token });
            }
            
            BearerTokenService.RemoveToken();
            isAuthenticated = false;
            Navigation.NavigateTo("/", true);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Logout error: {ex.Message}");
        }
    }

    public void Dispose()
    {
        timer?.Dispose();
    }
}
